{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es2015", "es2015.promise"],
        "module": "commonjs", // can't use es6 import statements in webpack.config.ts but now webpack can use es6 module tree shaking
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "allowJs": true,
        "target": "es5",
        "baseUrl": "./"
    },
    "files": ["webpack.config.ts"]
}
